{% extends 'base.html.twig' %}

{% block title %}Produit
{% endblock %}

{% block body %}
	<main class="main_container">
		<section class="product_head">
			<div class="product_head_item ">
				<h2 class="product_head_title">Liste de produits</h2>
			</div>
		</section>
		<section class="product_list_section">

			<div
				class="best_items_cards">
				<!--=================-->
				{% for produit in produits %}
					<div class="best_card ">
						<div class="best-card-picture ">
							<img src="{{ asset('uploads/' ~ produit.image) }}" alt="{{ produit.title }}">
						</div>
						<h3>{{ produit.title }}</h3>
						<div class="best-price ">
							<p>{{ produit.price }}
								â‚¬</p>
							<span class="price-span">
								<a href="{{ path('add_item', {'id': produit.id}) }}">
									<i class="uil uil-shopping-bag"></i>
								</a>
								<a href="{{ path('app_product_detail', {'id': produit.id}) }}">
									<i class="uil uil-eye"></i>
								</a>
							</span>
						</div>
					</div>
					<!--=================-->
				{% endfor %}
			</div>
		</section>
		<div class="page_render ">
			{{ knp_pagination_render(produits) }}
		</div>
	</main>
{% endblock %}
